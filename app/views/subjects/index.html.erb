<script type="text/javascript">
  $(document).ready(function(){
    $('#subjects').dataTable({
      "sDom": "<'row-fluid'<'span6'l><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
      "sPaginationType": "bootstrap"
    });
  });
</script>

<h1>
  Subjects
  <div class="pull-right">
    <%= link_to 'New', new_subject_path, :class => 'btn btn-primary' %>
  </div>
</h1>

<table id="subjects" class="table display">
  <thead>
	  <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.id %></td>
        <td><%= subject.name %></td>
        <td>
          <%= link_to 'Edit', edit_subject_path(subject), :class => "btn btn-mini" %>
          <%= link_to 'Delete', subject, :confirm => "Are you sure?", :method => :delete, :class => 'btn btn-mini btn-danger' %>
        </td>  
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pull-right">
  <%= link_to 'New', new_subject_path, :class => 'btn btn-primary' %>
</div>
