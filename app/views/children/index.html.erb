<script type="text/javascript">
  $(document).ready(function(){
    $('#children').dataTable({
      "sDom": "<'row-fluid'<'span6'l><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
      "sPaginationType": "bootstrap"
    });
  });
</script>

<h1>
  Children
  <div class="pull-right">
    <%= link_to 'New', new_child_path, :class => 'btn btn-primary' %>
  </div>
</h1>

<table id="children" class="table display">
  <thead>
	  <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Parent</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @children.each do |child| %>
      <tr>
        <td><%= child.id %></td>
        <td><%= child.first_name %></td>
        <td><%= child.last_name %></td>        
        <td><%= child.users.collect{|parent| parent.name}.join(", ") %></td>
        <td>
          <%= link_to 'Edit', edit_child_path(child), :class => "btn btn-mini" %>
          <%= link_to 'Delete', child, :confirm => "Are you sure?", :method => :delete, :class => 'btn btn-mini btn-danger' %>
        </td>  
      </tr>
    <% end %>
  </tbody>
</table>

<div class="pull-right">
  <%= link_to 'New', new_child_path, :class => 'btn btn-primary' %>
</div>
